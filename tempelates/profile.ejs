<!DOCTYPE html>
<html>
<head>
  <script src="homepage.js"></script>
  <script src="https://kit.fontawesome.com/371026b39a.js" crossorigin="anonymous"></script>
  <style>
    body {
      font-family: "Rubik", Helvetica, Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    .header {
      background-image: linear-gradient(to bottom right, #FFBD6F, #FD8451);
      color: white;
      text-align: center;
      padding: 20px;
    }

    .header button {
      font-size: 30px;
      margin: 0;
      color:white;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 30px;
    }

    .profile-img {
      font-size: 80px;
      margin-bottom: 20px;
    }

    .profile-name {
      font-size: 24px;
      margin-bottom: 10px;
    }

    .profile-details {
      border-top: 1px solid lightgray;
      padding-top: 20px;
      margin-top: 20px;
    }

    .label-value-pair {
      display: flex;
      align-items: center;
      margin-bottom: 15px;
    }

    .label {
      width: 150px;
      font-weight: bold;
      margin-right: 10px;
    }

    .value {
      flex: 1;
    }

    .change-pass {
      height: 32px;
      border: none;
      border-radius: 20px;
      background-color: #FFBD6F;
      color: white;
      font-weight: bold;
      padding: 0 20px;
      cursor: pointer;
      transition: background-color 0.2s;
    }

    .change-pass:hover {
      background-color: #FD8451;
    }
  </style>
  <meta charset="ISO-8859-1">
  <title>hand-carved</title>
</head>
<body>
  <div class="header">
   <form action="/home" method="post">
                     <input type="hidden" name="name" value="<%= name %>">
                     <input type="hidden" name="lastname" value="<%= lastname %>">
                     <input type="hidden" name="email" value="<%= email %>">
                     <input type="hidden" name="phone" value="<%= phone %>">
                     <input type="hidden" name="date" value="<%= date %>">
   <button type="submit" style="border: none; background: none; cursor: pointer;">Hand-Carved</button>
   </form> 
  </div>

  <div class="container">
    <div class="profile-img">
      <i class="fa-sharp fa-solid fa-circle-user"></i>
    </div>
    <h2 class="profile-name"><%= name %></h2>
    <div class="profile-details">
      <div class="label-value-pair">
        <span class="label">First name:</span>
        <span class="value"><%= name %></span>
      </div>
      <div class="label-value-pair">
        <span class="label">Last name:</span>
        <span class="value"><%= lastname %></span>
      </div>
      <div class="label-value-pair">
        <span class="label">Email:</span>
        <span class="value"><%= email %></span>
      </div>
      <div class="label-value-pair">
        <span class="label">Phone number:</span>
        <span class="value"><%= phone %></span>
      </div>
      <div class="label-value-pair">
        <span class="label">Password:</span>
        <span class="value">*********</span>
        <a href="newPassword.jsp">
          <button class="change-pass">Change password</button>
        </a>
      </div>
      <div class="label-value-pair">
        <span class="label">Date:</span>
        <span class="value"><%= date %></span>
      </div>
    </div>
  </div>
</body>
</html>
